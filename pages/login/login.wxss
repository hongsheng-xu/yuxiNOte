.login_page {
  width: 100%;
  position: absolute;
  z-index: 3;
  padding-top: 150rpx;
}
.login_page .getInfo {
  width: 300rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 20rpx 2rpx rgba(0, 0, 0, 0.153);
}
.login_page .userinfo {
  position: relative;
  width: 575rpx;
  border-radius: 20rpx;
  background-color: #efeeee;
  box-shadow: 0 0 40rpx -15rpx black;
  padding: 70rpx 0;
  margin: 0 auto;
}
.login_page .userinfo .userinfo-avatar {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  top: 0;
  width: 150rpx;
  height: 150rpx;
  border: 5rpx solid #efeeee;
  border-radius: 50%;
}
.login_page .userinfo text {
  display: block;
  text-align: center;
  padding: 10rpx 0;
}
.login_page .userinfo .userinfo-nickname {
  line-height: 60rpx;
  font-size: 60rpx;
}
.login_page .userinfo .userinfo-motto {
  white-space: nowrap;
  color: #aaaaaa;
  font-size: var(--fontSize / 1.2);
}
.login_page .userinfo-personal {
  margin: 0 auto;
  margin-top: 50rpx;
  width: 575rpx;
  min-height: 590rpx;
  border-radius: 20rpx;
  background-color: #efeeee;
  box-shadow: 0 0 40rpx -15rpx black;
}
.login_page .userinfo-personal .item {
  width: 90%;
  margin: 10rpx auto;
  padding-top: 50rpx;
  font-size: 30rpx;
  border-bottom: 4rpx solid #f5f4f4;
  display: flex;
  align-items: center;
  transition: 1.5s ease-in-out;
}
.login_page .userinfo-personal .item .icon {
  display: inline-block;
  width: 30rpx;
  margin-right: 15rpx;
  padding-left: 140rpx;
}
.login_page .userinfo-personal .item .content {
  padding-left: 140rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.login_page .userinfo-personal .item .content input {
  display: inline;
  margin-left: 6rpx;
}
.login_page .userinfo-personal .item .content .mail {
  color: black;
}
.login_page .userinfo-personal .item button {
  display: inline-block;
  margin: 0 ;
  padding: 0 ;
  font-size: 30rpx;
  width: auto ;
  font-weight: normal;
  background-color: #efeeee;
}
.bac {
  position: absolute;
  left: 0;
  transform: translateY(-50%);
  z-index: 0;
  width: 1500rpx;
  height: 1500rpx;
  border-radius: 50%;
  background-color: var(--themeColor);
}
.back {
  position: absolute;
  z-index: 3;
  top: 50%;
  transform: translate(50%, -50%);
  width: 1em;
}
.leaf {
  position: fixed;
  z-index: 5;
  bottom: 120rpx;
  width: 30vw;
}
